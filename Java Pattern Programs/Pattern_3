public class pattern_3 {
    public static void main(String[] args) {

        /*
         * * * * * *
         * * * *
         * * *
         * *
         *
         */

        int n = 5;

        int row = 1;
        int star = n;

        while (row <= n) {

            for (int i = 1; i <= star; i++) {
                System.out.print("* ");
                System.out.print(i);
            }
            System.out.println();
            row++;
            star--;

        }
    }
}
